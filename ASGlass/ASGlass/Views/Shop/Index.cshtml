@model ShopViewModel



<main id="shop">
    <div class="container">
        <div class="row">
            <div class="shop-left col-3">
                <div class="inner-page-sidebar">
                    <!-- Accordion -->
                    <div class="single-block">
                        <h3 class="sidebar-title">Kateqoriyaya görə seçin</h3>
                        <ul class="sidebar-menu--shop">
                            @foreach (var item in Model.Categories)
                            {
                                <li><a href="#">@item.Name (5)</a></li>
                            }
                        </ul>
                    </div>
                    <!-- Price -->
                    <div class="single-block">
                        <h3 class="sidebar-title">Fillter By Price</h3>
                        <input type="range" name="price-max" id="price-max" value="800" min="0" max="1000">
                    </div>
                    <!-- Size -->
                    <div class="single-block">
                        <h3 class="sidebar-title">Qalınlığa görə seçin</h3>
                        <ul class="sidebar-menu--shop menu-type-2">
                            @foreach (var item in Model.Thicknesses)
                            {
                                <li><a href="#">@item.Size</a></li>

                            }
                        </ul>
                    </div>
                    <!-- Color -->
                    <div class="single-block">
                        <h3 class="sidebar-title">Rəngə görə seçin</h3>
                        <ul class="sidebar-menu--shop menu-type-2">
                            @foreach (var item in Model.Colors)
                            {
                                <li><a href="#">@item.Name <span>(5)</span></a></li>

                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="shop-right col-9">
                <div class="shop-toolbar">
                    <div class="row">
                        <div class="toolbar-item col-3">
                            <span>Show:  </span>
                            <select class="form-control nice-select sort-select">
                                <option value="" selected="selected">3</option>
                                <option value="">9</option>
                                <option value="">5</option>
                                <option value="">10</option>
                                <option value="">12</option>
                            </select>
                        </div>
                        <div class="toolbar-item col-3">
                            <span class="toolbar-status">
                                Showing 1 to 9 of 14 (2 Pages)
                            </span>
                        </div>
                        <div class="toolbar-item col-5">
                            <span>Sort By: </span>
                            <select class="form-control nice-select sort-select ">
                                <option value="" selected="selected">Default Sorting</option>
                                <option value="">
                                    Sort
                                    By:Name (A - Z)
                                </option>
                                <option value="">
                                    Sort
                                    By:Name (Z - A)
                                </option>
                                <option value="">
                                    Sort
                                    By:Price (Low &gt; High)
                                </option>
                                <option value="">
                                    Sort
                                    By:Price (High &gt; Low)
                                </option>
                                <option value="">
                                    Sort
                                    By:Rating (Highest)
                                </option>
                                <option value="">
                                    Sort
                                    By:Rating (Lowest)
                                </option>
                                <option value="">
                                    Sort
                                    By:Model (A - Z)
                                </option>
                                <option value="">
                                    Sort
                                    By:Model (Z - A)
                                </option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="shop-items">
                    <div class="row">
                        @foreach (var item in Model.Products)
                        {
                            <div class="shop-item">
                                <img src="~/assets/images/accessories/@item.Image" alt="">
                                <br>
                                <p><a href="">@item.Name (20 G)</a></p>
                                <small>Ships in 1-3 business days.</small>
                                <br><br>
                                <div class="acc-item-price">
                                    <p>Price: @item.Price</p>
                                    <p>Discount Price: @item.DiscountPrice</p>
                                </div>
                                <br>
                                <a href="" class="shop-btn">ADD TO CARD</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>