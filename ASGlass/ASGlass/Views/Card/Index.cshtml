@model List<CartViewModel>

@{ 
    double totalProductPrice = 0;
    double totalPrice = 0;
    @foreach (var item in Model)
    {
        if (item.DiscountPrice > 0)
        {
            totalProductPrice = item.DiscountPrice;

        }
        else
        {
            totalProductPrice = item.Price;

        }

        totalPrice += totalProductPrice;
    }



}

<main id="cart">
    <section id="cart-body">

        <div class="container">
            <a asp-action="index" asp-controller="shop" class="shop-cont"><i class="bi bi-cart4"></i> Alış-Verişə Davam Et</a>
            <br><br>
            <div class="row">
                <div class="cart-left col-8">
                    <h4>SƏBƏTDƏKİ MƏHSULLAR</h4>
                    <div class="cart-left-body">
                        @foreach (var item in Model)
                        {
                            <div class="cart-item">
                                <div class="cart-item-img col-3">
                                    @if (item.IsAccessory == true)
                                    {
                                        <img src="~/assets/images/accessories/@item.Image" alt="">
                                    }
                                    else
                                    {
                                        <img src="~/assets/images/decors/@item.Image" alt="">
                                    }
                                </div>
                                <div class="cart-item-txt col-3">
                                    <p>@item.Name</p>
                                    <br>
                                    <b style="text-decoration:underline;">Spesifikasiyalar:</b>
                                    <br /><br />
                                    <p><b>Kəsim:</b></p>
                                    <p><b>Ölçü: </b> 24" x 36" </p>
                                    <p><b>Rəng:</b>Seamed</p>
                                    <p>Beveled </p>
                                    <p><b>Mərkəzdə Dəlik: </b></p>
                                </div>
                                <div class="cart-item-count col-2">
                                    <small>@item.Price ₼ / each</small>
                                    <select name="" id="">
                                        @for (int i = 1; i <= item.Count; i++)
                                        {
                                            <option value="">@i</option>
                                        }
                                    </select>
                                    <br><br>
                                    <a asp-action="deleteproduct" asp-controller="shop" asp-route-id="@item.ProductId" class="remove-item">Remove Item</a>
                                </div>
                                <div class="cart-item-price col-1">
                                    <b>@(item.DiscountPrice>0?item.DiscountPrice:item.Price) ₼</b>
                                </div>
                            </div>
                        }

                    </div>
                </div>
                <div class="cart-right col-4">
                    <h4>MƏHSULLARIN QİYMƏTİ</h4>
                    <br>
                    <div class="cart-right-body">
                        <ul>
                            @foreach (var item in Model)
                            {
                                <li>@item.Name <span>@(item.DiscountPrice>0?item.DiscountPrice:item.Price) ₼</span></li>

                            }
                            <li>Shopping & Handling <span>FREE</span></li>
                            <li><b>TOTAL</b><b class="pr-right">@totalPrice AZN</b></li>
                            <br>
                            <li><a href="">Proceed to Checkout</a></li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>

    </section>
</main>

