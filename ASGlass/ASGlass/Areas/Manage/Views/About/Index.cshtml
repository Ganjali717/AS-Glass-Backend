@model About
@{
    ViewBag.Title = "Haqqimizda";
    int order = 1;
}
<div class="panel-header panel-header-sm">
</div>
<div class="content mt-5">
    <div class="row">
        <div class="col-12 ">
            <div class="d-flex justify-content-between align-items-center">
                <h1>Haqqimizda</h1>
            </div>
            <table class="table" style="width:max-content;">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Title</th>
                        <th scope="col">Image</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">@order</th>
                        <td>@Model.Title</td>
                        <td><img src="~/assets/images/technica/@Model.Image" style="max-width:100px" alt="Alternate Text" /></td>
                        <td>
                            <a asp-action="edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                            <a asp-action="deletefetch" asp-route-id="@Model.Id" class="btn btn-danger btn-item-delete">Delete</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
