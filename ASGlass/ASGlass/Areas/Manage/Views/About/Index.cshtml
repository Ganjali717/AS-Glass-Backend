@model About
@{
    ViewBag.Title = "Haqqimizda";
    int order = 1;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12 ">
            <div class="d-flex justify-content-between align-items-center">
                <h1>Haqqımızda</h1>
            </div>
            <table class="table" style="width:max-content;">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Başlıq</th>
                        <th scope="col">Şəkil</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">@order</th>
                        <td>@Model.Title.Substring(0,130)</td>
                        <td><img src="~/assets/images/technica/@Model.Image" style="max-width:100px" alt="Alternate Text" /></td>
                        <td>
                            <a asp-action="edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzəliş Et</a>
                            <a asp-action="deletefetch" asp-route-id="@Model.Id" class="btn btn-danger btn-item-delete">Sil</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
