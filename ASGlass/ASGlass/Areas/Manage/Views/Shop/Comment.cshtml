@model Product
@{
    int order = 0;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Kommentler</h1>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Komentler</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var comment in Model.Comments)
            {
                order++;
                <tr>
                    <th scope="row">@order</th>
                    <td>@comment.Text</td>
                    <td>
                        <a asp-action="DeleteComment" asp-controller="shop" asp-route-id="@comment.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

